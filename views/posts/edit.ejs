<%- include('../partials/header') %>

<section>
      <div class="paper">
         <div class="pattern">
            <div class="content">
         <% if (post.owner.equals(loggedInUser && loggedInUser._id)) { %>
         <form class="create-post" action="/posts/<%= post._id %>?_method=PUT" method="POST">
            <input type="text" name="title" value="<%= post.title %>">
            <!-- <label>Title</label> -->
            <input type="datetime-local" name="date" value="<%= post.dateValue %>">
            <!-- <label>Date</label> -->
            <textarea name="entry"><%= post.entry %></textarea>
            <!-- <label>Entry</label> -->
            <input class="my-button" type="submit" value="Update Journal">
         </form>
         <% } else { %>
         <h1>Please Log In</h1>
         <% } %>
         </div>
         </div>
      </div>
</section>

<%- include('../partials/footer') %>